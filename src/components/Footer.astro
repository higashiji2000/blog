---
import Logo from "./Logo.astro";

const today = new Date();
type Page = {
  title: string;
  url: string;
};
const PAGES: Page[] = [
  { title: "記事一覧", url: "/posts" },
  { title: "プロフィール", url: "/profile" },
  { title: "プライバシーポリシー", url: "/privacy-policy" },
];
---

<footer
  class="max-w-screen-xl w-full mx-auto px-4 py-8 lg:px-8 lg:py-12 gap-2 lg:gap-4 flex flex-col items-center justify-center"
>
  <Logo />
  <ul class="flex gap-4">
    {
      PAGES.map(({ title, url }) => (
        <li class="text-sm text-neutral-500">
          <a href={url}>{title}</a>
        </li>
      ))
    }
  </ul>
  <span class="text-neutral-600 text-sm">
    &copy; {today.getFullYear()} higashiji.
  </span>
</footer>
